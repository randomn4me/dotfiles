# Set default Xft(3) font
fontname "Source Code Pro:size=9"

# Turn on sticky-group mode
sticky yes

# do not manage these
ignore lemonbar
ignore dmenu

# autogroups
autogroup 1 "urxvt,URxvt"

autogroup 2 "mupdf,MuPDF"

autogroup 3 "gl,mpv"

autogroup 4 "crx_cdfdeajljjandgdkngahnhbbpajjolha,Signal Private Messenger"

autogroup 5 "Navigator,Firefox"
autogroup 5 "surf,Surf"

# behavior, look & feel
borderwidth             2
color inactiveborder    "#000000"
color activeborder      "#c2c2b0"

gap                     30 10 10 10 
moveamount              20

# Keybindings
# SIZE
bind 4-d        vmaximize
bind 4-s        hmaximize
bind 4-f        maximize

bind M-h        resizeleft
bind M-j        resizedown
bind M-k        resizeup
bind M-l        resizeright

# POSITION
bind 4-t        "move tl"
bind 4-y        "move tr"
bind 4-v        "move bl"
bind 4-b    		"move br"
bind 4-g				"move c"

bind 4-h        moveleft
bind 4-j        movedown
bind 4-k        moveup
bind 4-l        moveright

bind 4S-h       bigmoveleft
bind 4S-j       bigmovedown
bind 4S-k       bigmoveup
bind 4S-l       bigmoveright

# CONTROL
bind 4-q 				delete

bind 4-Tab      cycle
bind 4S-Tab     rcycle

bind M-Tab unmap
bind MS-Tab unmap

# Group control
bind 4-grave       cyclegroup
bind 4-1           group1
bind 4-2           group2
bind 4-3           group3
bind 4-4           group4
bind 4-5           group5
bind 4S-1          movetogroup1
bind 4S-2          movetogroup2
bind 4S-3          movetogroup3
bind 4S-4          movetogroup4
bind 4S-5          movetogroup5

bind 4-Return urxvt

# Session management
bind 4S-Escape  restart

# Mousebindings
mousebind 4-1   window_move
mousebind 4-3   window_resize

# unbind
bind M-return unmap
bind C-slash unmap
bind C-Left unmap
bind C-Right unmap
bind CS-Left unmap
bind CS-Right unmap

bind M-Left unmap
bind M-Right unmap
bind M-Down unmap
bind M-Up unmap
bind MS-Left unmap
bind MS-Right unmap


fontname 'Inconsolata Nerd Font Mono:pixelsize=11:bold'

command alacritty alacritty
command firefox firefox
command rocketchat rocketchat-desktop
command suspend systemctl suspend


########################################
# do not manage these
########################################
ignore lemonbar
ignore dmenu

unbind-key all

########################################
# autogroups
########################################
autogroup 1 "Alacritty"

autogroup 2 "Evince"
autogroup 2 "MuPDF"
autogroup 2 "Zathura"

autogroup 3 "mpv"
autogroup 3 "Zotero"
autogroup 3 "libreoffice"
autogroup 3 "jetbrains-idea"

autogroup 4 "Rocket.Chat"
autogroup 4 "Signal"
autogroup 4 "mutt"

autogroup 5 "firefox"

autogroup 6 "zoom"

autogroup 7 "obsidian"

autogroup 9 "ncspot"


########################################
# behavior, look & feel
########################################
borderwidth             3
color inactiveborder    "#6e6a86"
color activeborder      "#f6c177"
color menubg            "#191724"
color menufg            "#f6c177"
color font              "#f6c177"
color selfont           "#191724"
color urgencyborder     "#eb6f92"
color urgencyborder     "#eb6f92"

gap                     25 10 10 10 
moveamount              20


########################################
# SIZE
########################################
bind-key 4-d        window-vmaximize
bind-key 4-f        window-maximize

bind-key M-h        window-resize-left
bind-key M-j        window-resize-down
bind-key M-k        window-resize-up
bind-key M-l        window-resize-right


########################################
# POSITION
########################################
bind-key 4-h        window-move-left
bind-key 4-j        window-move-down
bind-key 4-k        window-move-up
bind-key 4-l        window-move-right

bind-key 4S-j        window-move-down-big
bind-key 4S-k        window-move-up-big

bind-key 4-t        window-snap-up-left
bind-key 4-z        window-snap-up-right
bind-key 4-v        window-snap-down-left
bind-key 4-b        window-snap-down-right


########################################
# CONTROL
########################################
bind-key M-Return   window-hide
bind-key 4-q        window-delete
bind-key 4-Tab      window-cycle


########################################
# Group control
########################################
bind-key 4-1        group-toggle-1
bind-key 4-2        group-toggle-2
bind-key 4-3        group-toggle-3
bind-key 4-4        group-toggle-4
bind-key 4-5        group-toggle-5
bind-key 4-6        group-toggle-6
bind-key 4-7        group-toggle-7
bind-key 4-8        group-toggle-8
bind-key 4-9        group-toggle-9

bind-key 4S-1       window-movetogroup-1
bind-key 4S-2       window-movetogroup-2
bind-key 4S-3       window-movetogroup-3
bind-key 4S-4       window-movetogroup-4
bind-key 4S-5       window-movetogroup-5
bind-key 4S-6       window-movetogroup-6
bind-key 4S-7       window-movetogroup-7
bind-key 4S-8       window-movetogroup-8
bind-key 4S-9       window-movetogroup-9


########################################
# Custom shortcuts
########################################
bind-key 4S-l       slock

bind-key 4-Return   alacritty
bind-key 4-m        "alacritty --class 'mutt,mutt' -e neomutt"
bind-key 4-s        "alacritty --class 'ncspot,ncspot' -e ncspot"

bind-key 4-w        notify_wrapper wifi
bind-key 4-e        notify_wrapper task

bind-key 4-space    menu_run
bind-key 4S-q       shutdown-menu
bind-key 4-u        paperopen
bind-key 4-p        passmenu


########################################
# Session management
########################################
bind-key 4S-Escape  restart


########################################
# Mousebindings
########################################
bind-mouse 4-1   window-move
bind-mouse 4-3   window-resize

# unbind alt-{left,right}
unbind-key M-Left
unbind-key M-Right

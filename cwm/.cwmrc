# Set default Xft(3) font
fontname "Source Code Pro:size=9"

command term urxvt
command lock lock

# Turn on sticky-group mode
sticky yes

# do not manage these
ignore lemonbar
ignore dmenu

# autogroups
autogroup 1 "urxvt,URxvt"

autogroup 2 "mupdf,MuPDF"

autogroup 3 "gl,mpv"
autogroup 3 "gimp,Gimp"

autogroup 4 "signal,Signal"
autogroup 4 "telegram-desktop,TelegramDesktop"
autogroup 4 "ts3client_linux_amd64,TeamSpeak 3"

autogroup 5 "Navigator,Firefox"
autogroup 5 "Navigator,Tor Browser"
autogroup 5 "qutebrowser,qutebrowser"


# behavior, look & feel
borderwidth             2
color inactiveborder    "#000000"
color activeborder      "#c2c2b0"

gap                     30 10 10 10 
moveamount              20

# Keybindings
# unbind
bind M-return   unmap
bind C-slash    unmap
bind C-Left     unmap
bind C-Right    unmap
bind CS-Left    unmap
bind CS-Right   unmap

bind M-Left     unmap
bind M-Right    unmap
bind M-Down     unmap
bind M-Up       unmap
bind MS-Left    unmap
bind MS-Right   unmap

bind MS-l       unmap
bind MS-k       unmap
bind MS-j       unmap
bind MS-h       unmap

bind M-Tab unmap
bind MS-Tab unmap

# SIZE
bind 4-d        vmaximize
bind 4-f        maximize

bind M-h        resizeleft
bind M-j        resizedown
bind M-k        resizeup
bind M-l        resizeright

# POSITION
bind 4-t        snap tl
bind 4-y        snap tr
bind 4-g        snap c
bind 4-v        snap bl
bind 4-b        snap br

bind 4-h        moveleft
bind 4-j        movedown
bind 4-k        moveup
bind 4-l        moveright

bind 4S-h       bigmoveleft
bind 4S-j       bigmovedown
bind 4S-k       bigmoveup
bind 4S-l       bigmoveright

# CONTROL
bind 4-q        delete

bind 4-Tab      cycle
bind 4S-Tab     rcycle

# Group control
bind 4-grave    cyclegroup
bind 4-1        group1
bind 4-2        group2
bind 4-3        group3
bind 4-4        group4
bind 4-5        group5
bind 4S-1       movetogroup1
bind 4S-2       movetogroup2
bind 4S-3       movetogroup3
bind 4S-4       movetogroup4
bind 4S-5       movetogroup5

bind 4-Return   urxvt

bind 4-space    menu_run
bind 4-o        menu_open
bind 4-u        uniopen
bind 4-i        passmenu
bind 4S-q       shutdown-menu

bind 4-m        motivation

# Session management
bind 4S-Escape  restart

# Mousebindings
mousebind 4-1   window_move
mousebind 4-3   window_resize

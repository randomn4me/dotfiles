#!/bin/sh

[[ -f ~/.Xresources ]] && xrdb -merge -I$HOME ~/.Xresources 
setxkbmap -option caps:none
xsetroot -cursor_name left_ptr

 # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # 
# startup programs                                                            #
 # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # 

hsetroot -fill ${HOME}/etc/wallpaper
compton -c -r 15 -i 0.9 -f -D5 &
mpd &
dunst &
unclutter --timeout 2 &
thunderbird &
/home/phil/bin/ownchrome &

# exec swm
exec i3

source ~/.mutt/colors.linux

set from											= "p.jonczyk@posteo.de"
set realname									= "Philipp Jonczyk"

set editor										=	"vim"
set sendmail									=	"/usr/bin/msmtp"

set folder										= "${HOME}/var/mail/"
set spoolfile									= "+Inbox"
set mbox											=	"+Inbox"
set record										=	"+Sent"

set signature									=	"~/etc/email-signature"
set sig_dashes								= no
set sig_on_top								= yes

set forward_quote							= yes
set forward_format						=	"Fwd: %s"

set fast_reply								= yes

set edit_headers							= yes
set header_cache							= "~/.cache/mutt"

set timeout										= 10
set mail_check_stats					=	yes

set compose_format						= "Compose [Approx. msg size: %l   Atts: %a]%> "
set index_format							=	"[%Z]  %{%g/%m/%d}  %-20.20F  %s"
set sort											= reverse-date	

set sidebar_visible						=	yes
set sidebar_format						= "%n %B%*  %S"
mailboxes											=Inbox =Sent =Archive

set send_charset							=	"utf-8"

set mailcap_path							= ~/.mutt/mailcap
alternative_order 						text/plain text/enriched text/html

set pager_stop								= yes
set tilde											= yes
set menu_scroll

# ┌─┐┬─┐┐ ┬┬─┐┌┐┐┌─┐
# │  │┬┘└┌┘│─┘ │ │ │
# └─┘┆└┘ ┆ ┆   ┆ ┘─┘

set crypt_use_gpgme						= yes
set crypt_replysign						=	yes
set crypt_replysignencrypted	=	yes
set pgp_timeout								=	3600


# ┬─┐o┌┐┐┬─┐o┌┐┐┌─┐┐─┐
# │─││││││ ││││││ ┬└─┐
# ┆─┘┆┆└┘┆─┘┆┆└┘┆─┘──┘

# for sidebar
bind index,pager		K					sidebar-prev
bind index,pager		J					sidebar-next
bind index,pager		L					sidebar-open

# index
bind index					<space>		sync-mailbox
bind index					gg				first-entry
bind index					G					last-entry

# pager
bind pager					j					next-line
bind pager					k					previous-line
bind pager					g					top
bind pager					G					bottom
bind pager					q					exit

# index and pager
bind index,pager		R					group-reply
bind index,pager		N					search-opposite


# ┌┌┐┬─┐┌─┐┬─┐┌─┐┐─┐
# ││││─┤│  │┬┘│ │└─┐
# ┘ ┆┘ ┆└─┘┆└┘┘─┘──┘

# sync mails
macro		index				<f5>			"<shell-escape>mbsync -aq<enter>" "Run mbsync"

# open urls in browser
macro		pager				O					"<enter-command>unset wait_key<enter><pipe-entry>'urlview'<enter>"	'Follow links with urlview'

# keep inbox clean
macro		index,pager	A					"<tag-prefix><save-message>+Archive<enter>"

macro 	attach			S					"<save-entry><kill-line>~/tmp/"
